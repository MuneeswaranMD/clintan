# Server Configuration
PORT=5000
NODE_ENV=development

# Firebase Admin SDK
# Get these from Firebase Console > Project Settings > Service Accounts
FIREBASE_PROJECT_ID=clintan
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@clintan.iam.gserviceaccount.com

# Gmail Configuration
# Use App Password: https://myaccount.google.com/apppasswords
GMAIL_USER=your-email@gmail.com
GMAIL_APP_PASSWORD=your-16-digit-app-password

# WhatsApp Business API (Meta)
# Get from: https://business.facebook.com/
WHATSAPP_PHONE_ID=your-phone-number-id
WHATSAPP_ACCESS_TOKEN=your-permanent-access-token

# Redis Configuration
# Local: 127.0.0.1:6379
# Cloud: Use Upstash or Redis Cloud
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=

# Security
WEBHOOK_SECRET=change-this-to-a-random-secret-key
JWT_SECRET=another-random-secret-for-jwt

# Company Info
COMPANY_NAME=Averqon+
COMPANY_EMAIL=support@averqon.com
COMPANY_PHONE=+91XXXXXXXXXX
